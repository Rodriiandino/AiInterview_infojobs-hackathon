<script>
  let jobs = []
  let selectedJob = null

  async function getJobs() {
    try {
      const response = await fetch('http://localhost:3001/api/infojobs')
      const data = await response.json()
      jobs = data.offers
      const jobOfferSelect = document.getElementById('job-offer')
      jobOfferSelect.innerHTML = jobs
        .map(job => `<option value='${job.id}'>${job.title}</option>`)
        .join('')
    } catch (error) {
      console.error('Error:', error)
    }
  }

  getJobs()
</script>

